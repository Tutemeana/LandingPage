<section class="bg-black h-screen w-screen text-center relative overflow-hidden">
    
    <div class="z-30 relative flex flex-col pt-40 items-center">
      
        <form id="form" action="" class="flex flex-col text-white">
          <h3 class= "text-5xl font-medium"><span>Contactanos</span></h3>
          <label class="pt-8 pb-2 text-2xl" for="name">Nombre Completo <span>*</span></label>
          <input class="placeholder-white/90 px-2 bg-blue-950/30 border-2 border-white rounded" name="name" required type="text" id="name" placeholder="Juan">
          <label class="pt-8 pb-2 text-2xl" for="email">Correo electr√≥nico <span>*</span></label>
          <input class="placeholder-white/90 px-2 bg-blue-950/30 border-2 border-white rounded" name="email" type="text" id="email" required placeholder="juan@gmail.com">
          <label class="pt-8 pb-2 text-2xl" for="message">Mensaje</label>
          <textarea class="bg-blue-950/30 px-2 border-2 border-white rounded" id="message" name="message" id="" rows="10"></textarea><br>
          <button class="text-xl border-2 border-white bg-white/5 backdrop-blur-3xl rounded font-semibold inline-block text-white py-2 px-10
          hover:bg-white hover:text-black transition-colors duration-500" type="submit" class="">Enviar</button>
        </form>
        <a href="mailto:matute24b@gmail.com" id="function"></a>
    
    </div>

    <script>
      const $form = document.querySelector('#form')
      const $buttonMailto = document.querySelector('#function') as HTMLElement
  
      $form.addEventListener('submit', handleSubmit)
  
      function handleSubmit(event) {
        event.preventDefault()
        const form = new FormData(this)
        $buttonMailto.setAttribute('href', `mailto:matute24b@gmail.com?subject=Nombre: ${form.get('name')}  Correo: ${form.get('email')}&body=${form.get('message')}`)
        $buttonMailto.click()
      }
    </script>

    <div class="absolute top-0 bottom-0">
      <video 
      class="object-center object-cover h-screen w-screen"
      autoplay 
      muted 
      loop  
      src="/Bg.mp4"></video>	
    </div>
</section>